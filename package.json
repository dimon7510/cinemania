{
  "name": "cinemania",
  "version": "1.0.0",
  "description": "Project Cinemania - movie review website",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
    "usemin": "usemin index.html -d dist --htmlmin -o dist/index.html",
    "imagemin": "imagemin img/* -o dist/img",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin",
    "lite": "lite-server",
    "scss": "node-sass -o css/ css/",
    "watch:scss": "onchange \"css/*.scss\" -- npm run scss",
    "watch:all": "parallelshell \"npm run watch:scss\" \"npm run lite\"",
    "start": "npm run watch:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimon7510/cinemania.git"
  },
  "author": "Dimitri Eir",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dimon7510/cinemania/issues"
  },
  "homepage": "https://github.com/dimon7510/cinemania#readme",
  "devDependencies": {
    "copyfiles": "^2.2.0",
    "imagemin-cli": "^5.1.0",
    "lite-server": "^2.6.1",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.0",
    "parallelshell": "3.0.1",
    "rimraf": "^3.0.2",
    "usemin-cli": "^0.6.0"
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "bootstrap-social": "^5.1.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1"
  }
}
